{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "ma.far.csm.database",
  "productName": "CSM FAR Database",
  "copyright": "Copyright © 2024 Centre Sportif des FAR Maâmoura",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "src/assets/app-icon.ico"
  ],
  "extraResources": [
    {
      "from": "src/assets/app-icon.ico",
      "to": "icon.ico"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "src/assets/app-icon.ico",
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "installerIcon": "src/assets/app-icon.ico",
    "uninstallerIcon": "src/assets/app-icon.ico",
    "installerHeaderIcon": "src/assets/app-icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "CSM FAR Database"
  },
  "mac": {
    "target": ["dmg", "zip"],
    "category": "public.app-category.education",
    "icon": "src/assets/app-icon.ico"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "category": "Education",
    "icon": "src/assets/app-icon.ico"
  }
}
